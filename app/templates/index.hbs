<h1>Articles</h1>
<main>
  {{#each model as |Article|}}
    <article>
      <header>
        <h2>
          {{Article.title}}
        </h2>
      </header>
      <section>
        <p>
          {{Article.content}}
        </p>
      </section>
      <footer>
        <p>
          Posted by <strong>{{Article.author.firstname}}</strong>
        </p>
      </footer>
    </article>
  {{/each}}
</main>
